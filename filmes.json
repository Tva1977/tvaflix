<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TVAFLIX</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #fff;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #e50914;
            padding: 20px;
            text-align: center;
        }
        header h1 {
            margin: 0;
            font-size: 2em;
        }
        #filmes-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
            gap: 20px;
        }
        .filme {
            background-color: #1e1e1e;
            border-radius: 10px;
            width: 200px;
            overflow: hidden;
            text-align: center;
        }
        .filme img {
            width: 100%;
            height: auto;
        }
        .filme h3 {
            margin: 10px 0 5px 0;
        }
        .filme p {
            margin: 0 0 10px 0;
            font-size: 0.9em;
        }
        .filme button {
            background-color: #e50914;
            border: none;
            color: #fff;
            padding: 10px;
            width: 100%;
            cursor: pointer;
            font-size: 1em;
        }
        .filme button:hover {
            background-color: #f6121d;
        }
    </style>
</head>
<body>
    <header>
        <h1>TVAFLIX</h1>
    </header>
    <div id="filmes-container"></div>

    <script>
        async function carregarFilmes() {
            try {
                const resposta = await fetch('filmes.json');
                const filmes = await resposta.json();

                const container = document.getElementById('filmes-container');
                container.innerHTML = '';

                filmes.forEach(filme => {
                    const div = document.createElement('div');
                    div.className = 'filme';

                    div.innerHTML = `
                        <img src="${filme.poster}" alt="${filme.titulo}">
                        <h3>${filme.titulo}</h3>
                        <p>${filme.genero}</p>
                        <button onclick="window.open('${filme.trailer}', '_blank')">Assistir Trailer</button>
                    `;

                    container.appendChild(div);
                });
            } catch (erro) {
                console.error('Erro ao carregar filmes:', erro);
            }
        }

        carregarFilmes();
    </script>
</body>
</html>
