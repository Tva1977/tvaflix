<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>TVAFLIX</title>
    <style>
        body { font-family: Arial, sans-serif; background: #111; color: #fff; text-align: center; }
        .filme { display: inline-block; margin: 20px; }
        .filme img { width: 200px; height: 300px; cursor: pointer; border-radius: 8px; }
        .titulo { margin-top: 5px; font-weight: bold; }
    </style>
</head>
<body>
    <h1>TVAFLIX</h1>
    <div id="filmes-container"></div>

    <script>
        // Seus filmes
        const filmes = [
            { "titulo": "Vingadores: Ultimato", "genero": "Ação", "poster": "https://upload.wikimedia.org/wikipedia/pt/0/0d/Avengers_Endgame_poster.jpg", "trailer": "https://www.youtube.com/watch?v=TcMBFSGVi1c" },
            { "titulo": "O Rei Leão", "genero": "Infantil", "poster": "https://upload.wikimedia.org/wikipedia/pt/3/3d/The_Lion_King_poster.jpg", "trailer": "https://www.youtube.com/watch?v=7TavVZMewpY" },
            { "titulo": "Jurassic World: Reino Ameaçado", "genero": "Aventura", "poster": "https://upload.wikimedia.org/wikipedia/pt/9/9d/Jurassic_World_Fallen_Kingdom.jpg", "trailer": "https://www.youtube.com/watch?v=1FJDxK4-CxA" },
            { "titulo": "A Bela e a Fera", "genero": "Romance", "poster": "https://upload.wikimedia.org/wikipedia/pt/7/7f/Beauty_and_the_Beast_2017.jpg", "trailer": "https://www.youtube.com/watch?v=e3Nl_TCQXuw" },
            { "titulo": "Star Wars: O Despertar da Força", "genero": "Ficção", "poster": "https://upload.wikimedia.org/wikipedia/pt/7/7f/Star_Wars_The_Force_Awakens.jpg", "trailer": "https://www.youtube.com/watch?v=sGbxmsDFVnE" },
            { "titulo": "Homem-Aranha: Sem Volta Para Casa", "genero": "Ação", "poster": "https://upload.wikimedia.org/wikipedia/pt/f/f9/Spider-Man_No_Way_Home.jpg", "trailer": "https://www.youtube.com/watch?v=JfVOs4VSpmA" },
            { "titulo": "Frozen II", "genero": "Infantil", "poster": "https://upload.wikimedia.org/wikipedia/pt/f/f3/Frozen_2.jpg", "trailer": "https://www.youtube.com/watch?v=Zi4LMpSDccc" },
            { "titulo": "Os Incríveis 2", "genero": "Animação", "poster": "https://upload.wikimedia.org/wikipedia/pt/e/e7/Incredibles2.jpg", "trailer": "https://www.youtube.com/watch?v=i5qOzqD9Rms" },
            { "titulo": "Shang-Chi e a Lenda dos Dez Anéis", "genero": "Ação", "poster": "https://upload.wikimedia.org/wikipedia/pt/e/e3/Shang-Chi_poster.jpg", "trailer": "https://www.youtube.com/watch?v=8YjFbMbfXaQ" },
            { "titulo": "Encanto", "genero": "Infantil", "poster": "https://upload.wikimedia.org/wikipedia/pt/0/07/Encanto.jpg", "trailer": "https://www.youtube.com/watch?v=CaimKeDcudo" }
        ];

        const container = document.getElementById('filmes-container');

        filmes.forEach(filme => {
            const div = document.createElement('div');
            div.className = 'filme';
            div.innerHTML = `
                <img src="${filme.poster}" onclick="window.open('${filme.trailer}','_blank')">
                <div class="titulo">${filme.titulo}</div>
                <div class="genero">${filme.genero}</div>
            `;
            container.appendChild(div);
        });
    </script>
</body>
</html>
